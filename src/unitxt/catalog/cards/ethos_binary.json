{
    "type": "task_card",
    "loader": {
        "type": "load_hf",
        "path": "ethos",
        "name": "binary"
    },
    "task": {
        "type": "form_task",
        "inputs": [
            "choices",
            "sentence1"
        ],
        "outputs": [
            "label"
        ],
        "metrics": [
            "metrics.accuracy"
        ]
    },
    "preprocess_steps": [
        {
            "type": "rename_splits",
            "mapper": {
                "train": "test"
            }
        },
        "splitters.test_to_train_dev",
        {
            "type": "map_instance_values",
            "mappers": {
                "label": {
                    "0": "not hate speech",
                    "1": "hate speech"
                }
            }
        },
        {
            "type": "add_fields",
            "fields": {
                "choices": [
                    "hate speech",
                    "not hate speech"
                ]
            }
        },
        {
            "type": "rename_fields",
            "field_to_field": {
                "text": "sentence1"
            }
        }
    ],
    "templates": {
        "type": "templates_list",
        "items": [
            {
                "type": "input_output_template",
                "input_format": "Given this sentence: {sentence1}. Classify if it contains hatespeech. Choices: {choices}.",
                "output_format": "{label}"
            },
            {
                "type": "input_output_template",
                "input_format": "Does the following sentence contains hatespeech? Answer by choosing one of the options {choices}. sentence: {sentence1}.",
                "output_format": "{label}"
            }
        ]
    },
    "instructions": null
}