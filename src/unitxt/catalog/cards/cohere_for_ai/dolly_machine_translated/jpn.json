{
    "type": "task_card",
    "loader": {
        "type": "load_hf",
        "path": "CohereForAI/aya_evaluation_suite",
        "name": "dolly_machine_translated",
        "streaming": true
    },
    "preprocess_steps": [
        {
            "type": "split_random_mix",
            "mix": {
                "train": "test[90%]",
                "validation": "test[5%]",
                "test": "test[5%]"
            }
        },
        {
            "type": "filter_by_condition",
            "values": {
                "language": "jpn"
            },
            "condition": "eq"
        },
        {
            "type": "rename_fields",
            "field_to_field": {
                "inputs": "question",
                "targets": "answers"
            }
        },
        {
            "type": "execute_expression",
            "expression": "[answers]",
            "to_field": "answers"
        }
    ],
    "task": "tasks.qa.open",
    "templates": "templates.qa.open.all"
}
