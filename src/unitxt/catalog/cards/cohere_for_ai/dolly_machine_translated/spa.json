{
    "__type__": "task_card",
    "loader": {
        "__type__": "load_hf",
        "path": "CohereForAI/aya_evaluation_suite",
        "name": "dolly_machine_translated",
        "streaming": true,
        "filtering_lambda": "lambda instance: instance[\"language\"]==\"spa\""
    },
    "preprocess_steps": [
        {
            "__type__": "split_random_mix",
            "mix": {
                "train": "test[90%]",
                "validation": "test[5%]",
                "test": "test[5%]"
            }
        },
        {
            "__type__": "rename_fields",
            "field_to_field": {
                "inputs": "question",
                "targets": "answers"
            }
        },
        {
            "__type__": "list_field_values",
            "fields": [
                "answers"
            ],
            "to_field": "answers"
        }
    ],
    "task": "tasks.qa.open[metrics=[metrics.rag.correctness.llama_index_by_gpt_3_5_turbo]]",
    "templates": "templates.qa.open.all",
