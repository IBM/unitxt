{
    "type": "task_card",
    "loader": {
        "type": "load_hf",
        "path": "glue",
        "name": "stsb"
    },
    "preprocess_steps": [
        {
            "type": "split_random_mix",
            "mix": {
                "train": "train[95%]",
                "validation": "train[5%]",
                "test": "validation"
            }
        }
    ],
    "task": {
        "type": "form_task",
        "inputs": [
            "sentence1",
            "sentence2"
        ],
        "outputs": [
            "label"
        ],
        "metrics": [
            "metrics.spearman"
        ]
    },
    "templates": {
        "type": "templates_list",
        "items": [
            {
                "type": "output_quantizing_template",
                "input_format": "Given this sentence: '{sentence1}', on a scale of 1 to 5, how similar in meaning is it to this sentence: '{sentence2}'?",
                "output_format": "{label}",
                "quantum": 0.2
            }
        ]
    }
}