{
    "type": "task_card",
    "loader": {
        "type": "load_hf",
        "path": "glue",
        "name": "stsb"
    },
    "preprocess_steps": [
        {
            "type": "split_random_mix",
            "mix": {
                "train": "train[95%]",
                "validation": "train[5%]",
                "test": "validation"
            }
        },
        {
            "type": "rename_fields",
            "field_to_field": {
                "sentence1": "text1",
                "sentence2": "text2",
                "label": "attribute_value"
            }
        },
        {
            "type": "add_fields",
            "fields": {
                "attribute_name": "similarity",
                "min_value": "1",
                "max_value": "5"
            }
        }
    ],
    "task": "tasks.regression.two_texts",
    "templates": "templates.regression.two_texts.all"
}
