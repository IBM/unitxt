{
    "type": "task_card",
    "loader": {
        "type": "load_hf",
        "path": "0x22almostEvil/multilingual-wikihow-qa-16k"
    },
    "preprocess_steps": [
        {
            "type": "apply",
            "function": "json.loads",
            "to_field": "metadata",
            "_argv": [
                "METADATA"
            ]
        },
        {
            "type": "copy_fields",
            "field_to_field": [
                [
                    "metadata/language",
                    "extracted_language"
                ]
            ],
            "use_query": true
        },
        {
            "type": "filter_by_condition",
            "values": {
                "extracted_language": "fr"
            },
            "condition": "eq"
        },
        {
            "type": "remove_fields",
            "fields": [
                "extracted_language",
                "metadata"
            ]
        },
        {
            "type": "split_random_mix",
            "mix": {
                "train": "train[90%]",
                "validation": "train[5%]",
                "test": "train[5%]"
            }
        },
        {
            "type": "rename_fields",
            "field_to_field": {
                "INSTRUCTION": "question"
            }
        },
        {
            "type": "list_field_values",
            "fields": [
                "RESPONSE"
            ],
            "to_field": "answers"
        }
    ],
    "task": "tasks.qa.open",
    "templates": "templates.qa.open.all"
}
