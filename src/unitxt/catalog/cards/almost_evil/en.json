{
    "type": "task_card",
    "loader": {
        "type": "load_hf",
        "path": "0x22almostEvil/multilingual-wikihow-qa-16k"
    },
    "preprocess_steps": [
        {
            "type": "load_json",
            "field": "METADATA",
            "to_field": "metadata"
        },
        {
            "type": "copy_fields",
            "field_to_field": [
                [
                    "metadata/language",
                    "extracted_language"
                ]
            ]
        },
        {
            "type": "filter_by_condition",
            "values": {
                "extracted_language": "en"
            },
            "condition": "eq"
        },
        {
            "type": "remove_fields",
            "fields": [
                "extracted_language",
                "metadata"
            ]
        },
        {
            "type": "split_random_mix",
            "mix": {
                "train": "train[90%]",
                "validation": "train[5%]",
                "test": "train[5%]"
            }
        },
        {
            "type": "rename_fields",
            "field_to_field": {
                "INSTRUCTION": "question"
            }
        },
        {
            "type": "list_field_values",
            "fields": [
                "RESPONSE"
            ],
            "to_field": "answers"
        }
    ],
    "task": "tasks.qa.open",
    "templates": "templates.qa.open.all",
    "__tags__": {
        "dataset_info_tags": [
            "task_categories:question-answering",
            "size_categories:10K<n<100K",
            "language:en",
            "language:ru",
            "language:pt",
            "language:it",
            "language:es",
            "language:fr",
            "language:de",
            "language:nl",
            "license:cc-by-nc-3.0",
            "wikihow",
            "QnA",
            "croissant",
            "region:us"
        ]
    }
}
