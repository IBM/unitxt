{
    "__type__": "task_card",
    "loader": {
        "__type__": "load_from_api",
        "urls": {
            "test": "https://raw.githubusercontent.com/dmg-illc/JUDGE-BENCH/refs/heads/master/data/toxic_chat/toxic_chat_test.json"
        },
        "data_classification_policy": [
            "public"
        ],
        "data_field": "instances",
        "loader_limit": 10
    },
    "preprocess_steps": [
        {
            "__type__": "split_random_mix",
            "mix": {
                "test": "test[100%]"
            }
        },
        {
            "__type__": "rename",
            "field": "instance",
            "to_field": "text"
        },
        {
            "__type__": "rename",
            "field": "annotations/jailbreaking/majority_human",
            "to_field": "label"
        },
        {
            "__type__": "map_instance_values",
            "mappers": {
                "label": {
                    "0": "No",
                    "1": "Yes"
                }
            }
        },
        {
            "__type__": "copy",
            "field_to_field": {
                "label": "label_value"
            }
        },
        {
            "__type__": "map_instance_values",
            "mappers": {
                "label_value": {
                    "Yes": 1.0,
                    "No": 0.0
                }
            }
        }
    ],
    "task": {
        "__type__": "task",
        "input_fields": {
            "text": "str",
            "label": "str"
        },
        "reference_fields": {
            "label_value": "float"
        },
        "prediction_type": "float",
        "metrics": [
            "metrics.spearman",
            "metrics.accuracy"
        ],
        "default_template": "templates.empty[postprocessors=[processors.cast_to_float_return_nan_if_failed]]"
    },
    "templates": []
}
