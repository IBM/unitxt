{
    "__type__": "task_card",
    "loader": {
        "__type__": "load_hf",
        "path": "rag-datasets/rag-mini-wikipedia",
        "name": "text-corpus",
        "data_classification_policy": [
            "public"
        ]
    },
    "preprocess_steps": [
        {
            "__type__": "split_random_mix",
            "mix": {
                "train": "passages[100%]"
            }
        },
        {
            "__type__": "cast_fields",
            "fields": {
                "id": "str"
            }
        },
        {
            "__type__": "copy",
            "field_to_field": {
                "id": "document_id"
            }
        },
        {
            "__type__": "list_field_values",
            "fields": [
                "passage"
            ],
            "to_field": "passages"
        },
        {
            "__type__": "set",
            "fields": {
                "metadata_field": "",
                "title": ""
            }
        }
    ],
    "task": "tasks.rag.corpora",
    "templates": {
        "empty": {
            "__type__": "input_output_template",
            "input_format": "",
            "output_format": ""
        }
    }
}
