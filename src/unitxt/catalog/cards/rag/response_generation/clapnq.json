{
    "__type__": "task_card",
    "loader": {
        "__type__": "load_hf",
        "path": "PrimeQA/clapnq"
    },
    "preprocess_steps": [
        {
            "__type__": "split_random_mix",
            "mix": {
                "train": "train",
                "test": "validation"
            }
        },
        {
            "__type__": "copy",
            "field_to_field": {
                "passages/*/text": "contexts",
                "input": "question",
                "output/*/answer": "reference_answers"
            }
        },
        {
            "__type__": "set",
            "fields": {
                "contexts_ids": []
            }
        }
    ],
    "task": "tasks.rag.response_generation",
    "templates": {
        "default": "templates.rag.response_generation.simple"
    }
}
