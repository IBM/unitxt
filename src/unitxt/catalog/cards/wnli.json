{
    "type": "task_card",
    "loader": {
        "type": "load_hf",
        "path": "glue",
        "name": "wnli",
        "data_dir": null,
        "data_files": null
    },
    "task": {
        "type": "form_task",
        "inputs": [
            "choices",
            "sentence1",
            "sentence2"
        ],
        "outputs": [
            "label"
        ],
        "metrics": [
            "metrics.accuracy"
        ]
    },
    "preprocess_steps": [
        "splitters.small_no_test",
        {
            "type": "map_instance_values",
            "mappers": {
                "label": {
                    "0": "entailment",
                    "1": "not entailment"
                }
            },
            "strict": true
        },
        {
            "type": "add_fields",
            "fields": {
                "choices": [
                    "entailment",
                    "not entailment"
                ]
            },
            "use_query": false,
            "use_deepcopy": false
        },
        {
            "type": "rename_fields",
            "mapper": {
                "sentence1": "sentence1",
                "sentence2": "sentence2"
            }
        }
    ],
    "templates": {
        "type": "templates_list",
        "items": [
            {
                "type": "input_output_template",
                "input_format": "Given this sentence: {sentence1}, classify if this sentence: {sentence2} is {choices}.",
                "output_format": "{label}"
            }
        ]
    },
    "instructions": null
}