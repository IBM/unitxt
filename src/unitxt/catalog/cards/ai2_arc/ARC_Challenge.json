{
    "type": "task_card",
    "loader": {
        "type": "load_hf",
        "path": "ai2_arc",
        "name": "ARC-Challenge",
        "data_dir": null,
        "data_files": null
    },
    "task": {
        "type": "form_task",
        "inputs": [
            "choices",
            "sentence1",
            "numbers",
            "topic"
        ],
        "outputs": [
            "label"
        ],
        "metrics": [
            "metrics.accuracy"
        ]
    },
    "preprocess_steps": [
        {
            "type": "add_fields",
            "fields": {
                "topic": "science"
            },
            "use_query": false,
            "use_deepcopy": false
        },
        {
            "type": "rename_fields",
            "mapper": {
                "answerKey": "label",
                "question": "sentence1",
                "choices": "choices_struct"
            }
        },
        {
            "type": "copy_fields",
            "field": null,
            "to_field": null,
            "field_to_field": {
                "choices_struct/text": "choices",
                "choices_struct/label": "numbering"
            },
            "process_every_value": false,
            "use_query": true
        },
        {
            "type": "index_of",
            "search_in": "numbering",
            "index_of": "label",
            "to_field": "index",
            "use_query": false
        },
        {
            "type": "take_by_field",
            "field": "numbering",
            "index": "index",
            "to_field": "number",
            "use_query": false
        },
        {
            "type": "take_by_field",
            "field": "choices",
            "index": "index",
            "to_field": "answer",
            "use_query": false
        },
        {
            "type": "zip_field_values",
            "fields": [
                "numbering",
                "choices"
            ],
            "to_field": "choices",
            "longest": false,
            "use_query": false
        },
        {
            "type": "join_str",
            "field": "choices/*",
            "to_field": "choices_list",
            "field_to_field": null,
            "process_every_value": true,
            "use_query": true,
            "separator": ". "
        },
        {
            "type": "take_by_field",
            "field": "choices_list",
            "index": "index",
            "to_field": "number_and_answer",
            "use_query": false
        },
        {
            "type": "join_str",
            "field": "choices/*/0",
            "to_field": "numbers",
            "field_to_field": null,
            "process_every_value": false,
            "use_query": true,
            "separator": ","
        },
        {
            "type": "join_str",
            "field": "choices_list",
            "to_field": "choices",
            "field_to_field": null,
            "process_every_value": false,
            "use_query": false,
            "separator": " "
        },
        {
            "type": "rename_fields",
            "mapper": {
                "number": "label"
            }
        }
    ],
    "templates": {
        "original": {
            "type": "input_output_template",
            "input_format": "The following are multiple choice questions (with answers) about {topic}.\n\n                            {sentence1}.\nAnswers: {choices}.\nAnswer:",
            "output_format": "{label}"
        },
        "helm": {
            "type": "input_output_template",
            "input_format": "The following are multiple choice questions (with answers) about {topic}.\n\n\n                            Question: {sentence1}.\nAnswers: {choices}.\nAnswer:",
            "output_format": "{label}"
        },
        "lm_eval_harness": {
            "type": "input_output_template",
            "input_format": "Question: {sentence1}.\nChoices:\n{choices}.\nAnswer:",
            "output_format": "{label}"
        },
        "fm-eval": {
            "type": "input_output_template",
            "input_format": "The following are multiple choice questions (with answers) about {topic}.\n\n\n                            Question: {sentence1}\nChoose from {numbers}\nAnswers: {choices}\nAnswer:",
            "output_format": "{label}"
        }
    },
    "instructions": null
}