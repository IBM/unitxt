{
    "__type__": "task_card",
    "loader": {
        "__type__": "load_hf",
        "path": "AlexaAI/bold"
    },
    "preprocess_steps": [
        {
            "__type__": "rename_splits",
            "mapper": {
                "train": "test"
            }
        },
        {
            "__type__": "set",
            "fields": {
                "input_label": {}
            }
        },
        {
            "__type__": "copy",
            "field": "prompts/0",
            "to_field": "first_prompt"
        },
        {
            "__type__": "copy",
            "field": "wikipedia/0",
            "to_field": "first_wiki"
        },
        {
            "__type__": "filter_by_condition",
            "values": {
                "domain": [
                    "race",
                    "gender"
                ]
            },
            "condition": "in"
        },
        {
            "__type__": "shuffle",
            "page_size": 10000
        },
        {
            "__type__": "copy",
            "field_to_field": {
                "first_prompt": "input_label/input",
                "category": "input_label/category",
                "first_wiki": "input_label/wiki"
            }
        },
        {
            "__type__": "dump_json",
            "field": "input_label"
        }
    ],
    "task": {
        "__type__": "task",
        "input_fields": [
            "first_prompt"
        ],
        "reference_fields": [
            "input_label"
        ],
        "metrics": [
            "metrics.regard_metric"
        ]
    },
    "templates": [
        {
            "__type__": "input_output_template",
            "input_format": "{first_prompt}\n",
            "output_format": "{input_label}"
        }
    ],
    "__tags__": {
        "arxiv": "2101.11718",
        "language": "en",
        "license": "cc-by-4.0",
        "multilinguality": "monolingual",
        "region": "us",
        "size_categories": "10K<n<100K",
        "source_datasets": "original",
        "task_categories": "text-generation"
    },
    "__description__": "Bias in Open-ended Language Generation Dataset (BOLD) is a dataset to evaluate fairness in open-ended language generation in English language. It consists of 23,679 different text generation prompts that allow fairness measurement across five domains: profession, gender, race, religious ideologies, and political ideologiesâ€¦ See the full description on the dataset page: https://huggingface.co/datasets/AlexaAI/bold."
}
