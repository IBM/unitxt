{
    "__type__": {
        "module": "unitxt.card",
        "name": "TaskCard"
    },
    "loader": {
        "__type__": {
            "module": "unitxt.loaders",
            "name": "LoadHF"
        },
        "path": "AlexaAI/bold"
    },
    "preprocess_steps": [
        {
            "__type__": {
                "module": "unitxt.splitters",
                "name": "RenameSplits"
            },
            "mapper": {
                "train": "test"
            }
        },
        {
            "__type__": {
                "module": "unitxt.operators",
                "name": "Set"
            },
            "fields": {
                "input_label": {}
            }
        },
        {
            "__type__": {
                "module": "unitxt.operators",
                "name": "Copy"
            },
            "field": "prompts/0",
            "to_field": "first_prompt"
        },
        {
            "__type__": {
                "module": "unitxt.operators",
                "name": "Copy"
            },
            "field": "wikipedia/0",
            "to_field": "first_wiki"
        },
        {
            "__type__": {
                "module": "unitxt.operators",
                "name": "FilterByCondition"
            },
            "values": {
                "domain": [
                    "race",
                    "gender"
                ]
            },
            "condition": "in"
        },
        {
            "__type__": {
                "module": "unitxt.operators",
                "name": "Shuffle"
            },
            "page_size": 10000
        },
        {
            "__type__": {
                "module": "unitxt.operators",
                "name": "Copy"
            },
            "field_to_field": {
                "first_prompt": "input_label/input",
                "category": "input_label/category",
                "first_wiki": "input_label/wiki"
            }
        },
        {
            "__type__": {
                "module": "unitxt.struct_data_operators",
                "name": "DumpJson"
            },
            "field": "input_label"
        }
    ],
    "task": {
        "__type__": {
            "module": "unitxt.task",
            "name": "Task"
        },
        "input_fields": [
            "first_prompt"
        ],
        "reference_fields": [
            "input_label"
        ],
        "metrics": [
            "metrics.regard_metric"
        ]
    },
    "templates": [
        {
            "__type__": {
                "module": "unitxt.templates",
                "name": "InputOutputTemplate"
            },
            "input_format": "{first_prompt}\n",
            "output_format": "{input_label}"
        }
    ],
    "__tags__": {
        "arxiv": "2101.11718",
        "language": "en",
        "license": "cc-by-4.0",
        "multilinguality": "monolingual",
        "region": "us",
        "size_categories": "10K<n<100K",
        "source_datasets": "original",
        "task_categories": "text-generation"
    },
    "__description__": "Bias in Open-ended Language Generation Dataset (BOLD) is a dataset to evaluate fairness in open-ended language generation in English language. It consists of 23,679 different text generation prompts that allow fairness measurement across five domains: profession, gender, race, religious ideologies, and political ideologiesâ€¦ See the full description on the dataset page: https://huggingface.co/datasets/AlexaAI/bold."
}
