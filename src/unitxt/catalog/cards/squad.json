{
    "type": "task_card",
    "loader": {
        "type": "load_hf",
        "path": "squad"
    },
    "preprocess_steps": [
        {
            "type": "split_random_mix",
            "mix": {
                "train": "train[95%]",
                "validation": "train[5%]",
                "test": "validation"
            }
        },
        {
            "type": "copy_fields",
            "field_to_field": [
                [
                    "answers/text",
                    "answer"
                ]
            ],
            "use_query": true
        }
    ],
    "task": {
        "type": "form_task",
        "inputs": [
            "context",
            "question"
        ],
        "outputs": [
            "answer"
        ],
        "metrics": [
            "metrics.squad"
        ]
    },
    "templates": {
        "type": "templates_list",
        "items": [
            "templates.qa.contextual.simple",
            "templates.qa.contextual.simple2"
        ]
    }
}