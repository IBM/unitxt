{
    "type": "task_card",
    "loader": {
        "type": "load_hf",
        "path": "squad"
    },
    "preprocess_steps": [
        "splitters.small_no_test",
        {
            "type": "copy_fields",
            "field_to_field": [
                [
                    "answers/text",
                    "answer"
                ]
            ],
            "use_query": true
        }
    ],
    "task": {
        "type": "form_task",
        "inputs": [
            "context",
            "question"
        ],
        "outputs": [
            "answer"
        ],
        "metrics": [
            "metrics.squad"
        ]
    },
    "templates": "templates.qa.contextual.all"
}
