{
    "type": "task_card",
    "loader": {
        "type": "load_hf",
        "path": "multidoc2dial"
    },
    "preprocess_steps": [
        {
            "type": "rename_fields",
            "field_to_field": {
                "answers/text/0": "relevant_context"
            },
            "use_query": true
        },
        {
            "type": "list_field_values",
            "fields": [
                "utterance"
            ],
            "to_field": "answer"
        },
        {
            "type": "apply",
            "function": "__main__.extract_question",
            "to_field": "question",
            "_argv": [
                "question"
            ]
        }
    ],
    "task": "tasks.qa.contextual.abstractive",
    "templates": "templates.qa.contextual.all"
}
