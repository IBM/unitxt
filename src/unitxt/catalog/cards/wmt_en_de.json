{
    "type": "task_card",
    "loader": {
        "type": "load_hf",
        "path": "wmt16",
        "name": "de-en"
    },
    "preprocess_steps": [
        {
            "type": "split_random_mix",
            "mix": {
                "train": "train",
                "validation": "validation",
                "test": "test"
            }
        },
        {
            "type": "copy_fields",
            "field_to_field": [
                [
                    "translation/en",
                    "en"
                ],
                [
                    "translation/de",
                    "de"
                ]
            ],
            "use_query": true
        }
    ],
    "task": {
        "type": "form_task",
        "inputs": [
            "en"
        ],
        "outputs": [
            "de"
        ],
        "metrics": [
            "metrics.bleu"
        ]
    },
    "templates": {
        "type": "templates_list",
        "items": [
            {
                "type": "input_output_template",
                "input_format": "{en}",
                "output_format": "{de}"
            }
        ]
    }
}