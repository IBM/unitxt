{
    "__type__": {
        "module": "unitxt.card",
        "name": "TaskCard"
    },
    "loader": {
        "__type__": {
            "module": "unitxt.loaders",
            "name": "LoadHF"
        },
        "path": "webis/tldr-17",
        "revision": "refs/convert/parquet",
        "splits": [
            "train"
        ],
        "data_classification_policy": [
            "public"
        ],
        "streaming": true
    },
    "preprocess_steps": [
        {
            "__type__": {
                "module": "unitxt.splitters",
                "name": "SplitRandomMix"
            },
            "mix": {
                "train": "train[70%]",
                "validation": "train[15%]",
                "test": "train[15%]"
            }
        },
        {
            "__type__": {
                "module": "unitxt.operators",
                "name": "Rename"
            },
            "field_to_field": {
                "content": "document"
            }
        },
        {
            "__type__": {
                "module": "unitxt.operators",
                "name": "Set"
            },
            "fields": {
                "document_type": "document"
            }
        },
        {
            "__type__": {
                "module": "unitxt.collections_operators",
                "name": "Wrap"
            },
            "field": "summary",
            "inside": "list",
            "to_field": "summaries"
        },
        {
            "__type__": {
                "module": "unitxt.operators",
                "name": "FilterByExpression"
            },
            "expression": "len(document) <= 6000"
        }
    ],
    "task": "tasks.summarization.abstractive",
    "templates": "templates.summarization.abstractive.all",
    "__tags__": {
        "annotations_creators": "no-annotation",
        "flags": [
            "reddit-posts-summarization"
        ],
        "language": "en",
        "language_creators": "crowdsourced",
        "license": "cc-by-4.0",
        "multilinguality": "monolingual",
        "region": "us",
        "size_categories": "1M<n<10M",
        "source_datasets": "original",
        "task_categories": "summarization"
    },
    "__description__": "This corpus contains preprocessed posts from the Reddit dataset.\nThe dataset consists of 3,848,330 posts with an average length of 270 words for content,\nand 28 words for the summary.\nFeatures includes strings: author, body, normalizedBody, content, summary, subreddit, subreddit_id.\nContent is used as document and summary is used as summary."
}
