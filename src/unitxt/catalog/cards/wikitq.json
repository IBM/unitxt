{
    "type": "task_card",
    "loader": {
        "type": "load_hf",
        "path": "wikitablequestions"
    },
    "preprocess_steps": [
        "splitters.small_no_test",
        {
            "type": "copy_fields",
            "field_to_field": [
                [
                    "answers",
                    "answer"
                ]
            ],
            "use_query": true
        },
        {
            "type": "add_fields",
            "fields": {
                "context_type": "table"
            }
        },
        {
            "type": "truncate_table_cells",
            "max_length": 15,
            "table": "table",
            "text_output": "answer"
        },
        {
            "type": "truncate_table_rows",
            "field": "table",
            "rows_to_keep": 50
        },
        {
            "type": "plug_in_operator",
            "field": "table_serializer",
            "default": {
                "type": "serialize_table_as_indexed_row_major",
                "field_to_field": [
                    [
                        "table",
                        "table"
                    ]
                ]
            }
        },
        {
            "type": "rename_fields",
            "field_to_field": {
                "table": "context"
            }
        }
    ],
    "task": "tasks.qa.with_context.extractive",
    "templates": "templates.qa.with_context.all"
}
