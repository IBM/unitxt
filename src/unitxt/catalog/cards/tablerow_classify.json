{
    "__type__": {
        "module": "unitxt.card",
        "name": "TaskCard"
    },
    "loader": {
        "__type__": {
            "module": "unitxt.loaders",
            "name": "LoadFromKaggle"
        },
        "url": "https://www.kaggle.com/datasets/fedesoriano/heart-failure-prediction"
    },
    "preprocess_steps": [
        {
            "__type__": {
                "module": "unitxt.splitters",
                "name": "SplitRandomMix"
            },
            "mix": {
                "train": "train[70%]",
                "validation": "train[10%]",
                "test": "train[20%]"
            }
        },
        {
            "__type__": {
                "module": "unitxt.operators",
                "name": "Rename"
            },
            "field_to_field": {
                "HeartDisease": "label"
            }
        },
        {
            "__type__": {
                "module": "unitxt.operators",
                "name": "MapInstanceValues"
            },
            "mappers": {
                "label": {
                    "0": "Normal",
                    "1": "Heart Disease"
                }
            }
        },
        {
            "__type__": {
                "module": "unitxt.operators",
                "name": "Set"
            },
            "fields": {
                "text_type": "Person medical record",
                "type_of_class": "Heart Disease Possibility"
            }
        },
        {
            "__type__": {
                "module": "unitxt.operators",
                "name": "ExtractFieldValues"
            },
            "field": "label",
            "to_field": "classes",
            "stream_name": "train"
        },
        {
            "__type__": {
                "module": "unitxt.struct_data_operators",
                "name": "SerializeTableRowAsText"
            },
            "fields": [
                "Age",
                "Sex",
                "ChestPainType",
                "RestingBP",
                "Cholesterol",
                "FastingBS",
                "RestingECG",
                "MaxHR",
                "ExerciseAngina",
                "Oldpeak",
                "ST_Slope"
            ],
            "to_field": "text",
            "max_cell_length": 25
        }
    ],
    "task": "tasks.classification.multi_class",
    "templates": "templates.classification.multi_class.all"
}
