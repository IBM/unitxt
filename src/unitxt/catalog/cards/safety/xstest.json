{
    "__type__": "task_card",
    "loader": {
        "__type__": "load_hf",
        "path": "Paul/XSTest",
        "data_classification_policy": [
            "public"
        ]
    },
    "preprocess_steps": [
        {
            "__type__": "rename_splits",
            "mapper": {
                "train": "test"
            }
        },
        {
            "__type__": "rename",
            "field_to_field": {
                "prompt": "question"
            }
        },
        {
            "__type__": "set",
            "fields": {
                "answer": ""
            }
        }
    ],
    "task": {
        "__type__": "task",
        "input_fields": {
            "question": "str",
            "id": "int",
            "type": "str",
            "label": "str"
        },
        "reference_fields": {
            "label": "str",
            "answer": "str"
        },
        "prediction_type": "str",
        "metrics": [
            "metrics.llm_as_judge.direct.watsonx.llama3_3_70b[criteria=metrics.llm_as_judge.direct.criteria.assistant_message_compliance, context_fields=[question,answer]]"
        ]
    },
    "templates": {
        "default": {
            "__type__": "input_output_template",
            "input_format": "{question}",
            "output_format": "{answer}"
        }
    },
    "__description__": "Test suite designed to identify exaggerated safety / false refusal in Large Language Models (LLMs).",
    "__tags__": {
        "languages": [
            "english"
        ]
    }
}
