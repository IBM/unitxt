{
    "type": "task_card",
    "loader": {
        "type": "load_hf",
        "path": "wiki_bio"
    },
    "preprocess_steps": [
        {
            "type": "split_random_mix",
            "mix": {
                "train": "train",
                "validation": "val",
                "test": "test"
            }
        },
        {
            "type": "list_to_key_val_pairs",
            "fields": [
                "input_text/table/column_header",
                "input_text/table/content"
            ],
            "to_field": "kvpairs",
            "use_query": true
        },
        {
            "type": "serialize_key_val_pairs",
            "field_to_field": [
                [
                    "kvpairs",
                    "input"
                ]
            ]
        },
        {
            "type": "rename_fields",
            "field_to_field": {
                "target_text": "output"
            }
        }
    ],
    "task": "tasks.generation",
    "templates": {
        "type": "templates_list",
        "items": [
            {
                "type": "input_output_template",
                "input_format": "Given the following Key-Value pairs, generate text from this data. Key-Value pairs = {input}. Text = ",
                "output_format": "{output}"
            }
        ]
    }
}
