{
    "type": "task_card",
    "loader": {
        "type": "load_hf",
        "path": "stanfordnlp/coqa"
    },
    "preprocess_steps": [
        "splitters.small_no_test",
        {
            "type": "add_fields",
            "fields": {
                "context_type": "dialog",
                "completion_type": "answer"
            }
        },
        {
            "type": "lists_to_list_of_dicts",
            "fields": [
                "questions",
                "answers/input_text"
            ],
            "with_keys": [
                "user",
                "system"
            ],
            "to_field": "dialog",
            "use_query": true
        },
        {
            "type": "dialog_serializer",
            "field": "dialog",
            "to_field": "context",
            "context_field": "story",
            "last_system_turn_to_field": "completion"
        }
    ],
    "task": "tasks.completion.abstractive",
    "templates": "templates.completion.abstractive.all"
}
