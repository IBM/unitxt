{
    "type": "task_card",
    "loader": {
        "type": "load_hf",
        "path": "GEM/xlsum",
        "name": "pashto"
    },
    "preprocess_steps": [
        {
            "type": "rename_fields",
            "field_to_field": {
                "text": "document",
                "target": "summary"
            }
        },
        {
            "type": "add_fields",
            "fields": {
                "text_type": "text"
            }
        }
    ],
    "task": {
        "type": "form_task",
        "inputs": [
            "document"
        ],
        "outputs": [
            "summary"
        ],
        "metrics": [
            "metrics.rouge"
        ]
    },
    "templates": {
        "type": "templates_list",
        "items": [
            {
                "type": "input_output_template",
                "input_format": "{document}",
                "output_format": "{summary}"
            }
        ]
    }
}
