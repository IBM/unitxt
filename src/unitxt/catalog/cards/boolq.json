{
    "type": "task_card",
    "loader": {
        "type": "load_hf",
        "path": "boolq"
    },
    "preprocess_steps": [
        "splitters.small_no_test",
        {
            "type": "add_fields",
            "fields": {
                "topic": "boolean questions",
                "answers": [
                    "yes",
                    "false"
                ]
            }
        },
        {
            "type": "cast_fields",
            "fields": {
                "answer": "str"
            }
        },
        {
            "type": "rename_fields",
            "field_to_field": {
                "question": "question",
                "answer": "label",
                "passage": "context",
                "answers": "answers",
                "topic": "topic"
            }
        },
        {
            "type": "join_str",
            "separator": ",",
            "field": "answers",
            "to_field": "answers"
        }
    ],
    "task": {
        "type": "form_task",
        "inputs": [
            "question",
            "label",
            "context",
            "topic"
        ],
        "outputs": [
            "label"
        ],
        "metrics": [
            "metrics.accuracy"
        ]
    },
    "templates": {
        "clean": {
            "type": "input_output_template",
            "input_format": "Context: {context}\nQuestion: {question}.\nAnswer:",
            "output_format": "{label}"
        }
    }
}