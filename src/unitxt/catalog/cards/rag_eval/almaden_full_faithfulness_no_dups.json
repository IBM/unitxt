{
    "__type__": "task_card",
    "loader": {
        "__type__": "load_from_ibm_cloud",
        "endpoint_url_env": "FMEVAL_COS_URL",
        "aws_access_key_id_env": "FMEVAL_COS_ACCESS_KEY_ID",
        "aws_secret_access_key_env": "FMEVAL_COS_SECRET_ACCESS_KEY",
        "bucket_name": "metrics-eval-data",
        "data_dir": "almaden_by_subset_all_rounds",
        "data_files": {
            "test": "almaden_full_almaden_no_dups.csv"
        }
    },
    "preprocess_steps": [
        {
            "__type__": "map_instance_values",
            "mappers": {
                "faithfulness_0": {
                    "1": 0,
                    "2": 0,
                    "3": 1,
                    "4": 1
                },
                "faithfulness_1": {
                    "1": 0,
                    "2": 0,
                    "3": 1,
                    "4": 1
                },
                "faithfulness_2": {
                    "1": 0,
                    "2": 0,
                    "3": 1,
                    "4": 1
                }
            }
        },
        {
            "__type__": "list_field_values",
            "fields": [
                "faithfulness_0",
                "faithfulness_1",
                "faithfulness_2"
            ],
            "to_field": "is_faithful"
        },
        {
            "__type__": "filter_by_expression",
            "expression": "sum(is_faithful) > -1"
        },
        {
            "__type__": "execute_expression",
            "to_field": "is_faithful",
            "expression": "sum(is_faithful)>=2"
        },
        {
            "__type__": "cast_fields",
            "fields": {
                "is_faithful": "int"
            }
        },
        {
            "__type__": "set",
            "fields": {
                "choices": [
                    "no",
                    "yes"
                ]
            }
        },
        {
            "__type__": "copy",
            "field_to_field": {
                "is_faithful": "number_val",
                "input": "question",
                "model_response": "answer"
            }
        },
        {
            "__type__": "filter_by_condition",
            "values": {
                "is_idk_response": [
                    "0",
                    "1",
                    0,
                    1
                ]
            },
            "condition": "in"
        },
        {
            "__type__": "list_field_values",
            "fields": [
                "target"
            ],
            "to_field": "ground_truths"
        },
        {
            "__type__": "apply",
            "function": "ast.literal_eval",
            "to_field": "contexts",
            "_argv": [
                "contexts"
            ]
        },
        {
            "__type__": "map_instance_values",
            "mappers": {
                "is_faithful": {
                    "0": [
                        "no"
                    ],
                    "1": [
                        "yes"
                    ]
                }
            }
        },
        {
            "__type__": "copy",
            "field_to_field": {
                "is_faithful": "textual_label"
            }
        }
    ],
    "task": "tasks.rag_eval.faithfulness.binary",
    "templates": "templates.rag_eval.faithfulness.all",
    "sampler": {
        "__type__": "diverse_labels_sampler",
        "choices": "choices",
        "labels": "textual_label",
        "include_empty_label": false
    }
}
