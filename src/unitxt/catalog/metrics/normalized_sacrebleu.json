{
    "type": "metric_pipeline",
    "main_score": "sacrebleu",
    "preprocess_steps": [
        {
            "type": "copy",
            "field": "task_data/target_language",
            "to_field": "task_data/tokenize",
            "not_exist_ok": true,
            "get_default": "en"
        },
        {
            "type": "lower_case",
            "field": "task_data/tokenize"
        },
        {
            "type": "map_instance_values",
            "mappers": {
                "task_data/tokenize": {
                    "german": null,
                    "deutch": null,
                    "de": null,
                    "french": null,
                    "fr": null,
                    "romanian": null,
                    "ro": null,
                    "english": null,
                    "en": null,
                    "spanish": null,
                    "es": null,
                    "portuguese": null,
                    "pt": null,
                    "arabic": "intl",
                    "ar": "intl",
                    "korean": "ko-mecab",
                    "ko": "ko-mecab",
                    "japanese": "ja-mecab",
                    "ja": "ja-mecab"
                }
            },
            "strict": true
        }
    ],
    "metric": {
        "type": "normalized_sacrebleu"
    }
}
