{
    "__type__": "metric_pipeline",
    "main_score": "recall",
    "preprocess_steps": [
        {
            "__type__": "save_prediction_references",
            "name": "end_to_end_answer_correctness"
        },
        {
            "__type__": "copy",
            "field_to_field": [
                [
                    "prediction/answer",
                    "prediction"
                ]
            ]
        },
        {
            "__type__": "copy",
            "field_to_field": {
                "task_data/reference_answers": "references"
            }
        }
    ],
    "metric": "metrics.token_overlap[score_prefix=answer_correctness_]",
    "postprocess_steps": [
        {
            "__type__": "restore_prediction_references",
            "name": "end_to_end_answer_correctness"
        }
    ]
}
