{
    "type": "sequential_recipe",
    "steps": [
        {
            "type": "load_hf",
            "path": "glue",
            "name": "wnli",
            "data_dir": null,
            "data_files": null
        },
        {
            "type": "split_random_mix",
            "mix": {
                "train": "train[95%]",
                "validation": "train[5%]",
                "test": "validation"
            }
        },
        {
            "type": "slice_split",
            "slices": {
                "demos_pool": "train[:100]",
                "train": "train[100:]",
                "validation": "validation",
                "test": "test"
            }
        },
        {
            "type": "map_instance_values",
            "mappers": {
                "label": {
                    "0": "entailment",
                    "1": "not_entailment"
                }
            },
            "strict": true
        },
        {
            "type": "add_fields",
            "fields": {
                "choices": [
                    "entailment",
                    "not_entailment"
                ]
            }
        },
        {
            "type": "normalize_list_fields",
            "fields": [
                "choices"
            ],
            "key_prefix": "",
            "empty_value": "",
            "separator": ", "
        },
        {
            "type": "form_task",
            "inputs": [
                "choices",
                "sentence1",
                "sentence2"
            ],
            "outputs": [
                "label"
            ],
            "metrics": [
                "metrics.accuracy"
            ]
        },
        {
            "type": "spread_split",
            "accessible_streams": [
                "demos_pool"
            ],
            "cache_accessible_streams": true,
            "source_stream": "demos_pool",
            "target_field": "demos",
            "sampler": {
                "type": "random_sampler",
                "sample_size": 5
            }
        },
        {
            "type": "render_templated_icl",
            "template": {
                "type": "auto_input_output_template",
                "input_format": "Given this sentence: {sentence1}, classify if this sentence: {sentence2} is {choices}.",
                "output_format": "{label}"
            },
            "random_reference": false,
            "instruction": {
                "type": "textual_instruction",
                "text": "classify if this sentence is entailment or not_entailment."
            },
            "input_prefix": "Input: ",
            "output_prefix": "Output: ",
            "instruction_prefix": "",
            "demos_field": "demos",
            "size_limiter": null,
            "input_output_separator": "\n",
            "demo_separator": "\n\n"
        }
    ]
}