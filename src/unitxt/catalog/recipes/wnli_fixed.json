{
    "type": "sequential_recipe",
    "steps": [
        {
            "type": "load_hf",
            "path": "glue",
            "name": "wnli"
        },
        {
            "type": "split_random_mix",
            "mix": {
                "train": "train[95%]",
                "validation": "train[5%]",
                "test": "validation"
            }
        },
        {
            "type": "map_instance_values",
            "mappers": {
                "label": {
                    "0": "entailment",
                    "1": "not entailment"
                }
            }
        },
        {
            "type": "add_fields",
            "fields": {
                "choices": [
                    "entailment",
                    "not entailment"
                ]
            }
        },
        {
            "type": "form_task",
            "inputs": [
                "choices",
                "sentence1",
                "sentence2"
            ],
            "outputs": [
                "label"
            ],
            "metrics": [
                "metrics.accuracy"
            ]
        },
        {
            "type": "input_output_template",
            "input_format": "Given this sentence: {sentence1}, classify if this sentence: {sentence2} is {choices}.",
            "output_format": "{label}"
        },
        {
            "type": "system_format",
            "model_input_format": "User: {source}\nAgent: "
        }
    ]
}
