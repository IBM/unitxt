{
    "type": "sequential_recipe",
    "steps": [
        {
            "type": "load_hf",
            "path": "glue",
            "name": "wnli"
        },
        {
            "type": "split_random_mix",
            "mix": {
                "train": "train[95%]",
                "validation": "train[5%]",
                "test": "validation"
            }
        },
        {
            "type": "map_instance_values",
            "mappers": {
                "label": {
                    "0": "entailment",
                    "1": "not entailment"
                }
            }
        },
        {
            "type": "add_fields",
            "fields": {
                "choices": [
                    "entailment",
                    "not entailment"
                ],
                "instruction": "classify the relationship between the two sentences from the choices."
            }
        },
        {
            "type": "form_task",
            "inputs": [
                "choices",
                "instruction",
                "sentence1",
                "sentence2"
            ],
            "outputs": [
                "label"
            ],
            "metrics": [
                "metrics.accuracy"
            ]
        },
        {
            "type": "render_auto_format_template"
        }
    ]
}